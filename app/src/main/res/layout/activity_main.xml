<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.leiyang.testfragment.MainActivity">


    <fragment
        android:name="com.example.leiyang.testfragment.firstFragment"
        android:id="@+id/ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <fragment
        android:name="com.example.leiyang.testfragment.secondFragment"
        android:layout_width="match_parent"
        android:id="@+id/ss"
        android:layout_height="match_parent"
        android:layout_weight="2" />
    <Button
        android:id="@+id/btn_change"
        android:onClick="onChange"
        android:text="@string/btn_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
